<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_hamper"
            android:id="@+id/layout_iv_hamperPhoto"
            android:layout_width="100dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/layout_tv_hamperName"
                android:text="Standard Grocery Hamper"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/layout_tv_hamperPrice"
                android:text="R 600.00"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/layout_iv_more"
            android:layout_gravity="center"
            android:src="@drawable/icon_more"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>